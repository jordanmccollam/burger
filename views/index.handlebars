<div class="container text-light">
    <div class="row text-center">
        <div class="col-12 text-warning">
            <h1 class="display-3 customFont">EAT DA BURGER</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <h2 class="customFont text-center border-bottom">Available Burgers</h2>

            {{#each burgers}}
            <div class="row">
                <div class="col-8">
                    <p class="sortaBigFont">{{burger_name}} </p>
                </div>
                <div class="col-4">
                    <button class="btn btn-warning customFont" id="{{id}}"><i class="fas fa-utensils"></i> Burger
                        #{{id}} </button>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-lg-6">
            <h2 class="customFont text-center border-bottom">Davoured Burgers</h2>

            {{#each burgers}}
            <div class="row">
                <div class="col-8">
                    <p class="sortaBigFont">{{burger_name}} </p>
                </div>
                <div class="col-4">
                    <button class="btn btn-warning customFont" id="{{id}}"><i class="fas fa-utensils"></i> Burger
                        #{{id}} </button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

